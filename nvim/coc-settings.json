{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["python", "go"],
  "python.formatting.provider": "black"

}
